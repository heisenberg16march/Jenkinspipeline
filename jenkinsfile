pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Step 1: Building the code"
            }
        }
        
        stage('Unit and Integration Tests') {
            steps {
                echo "Step 2: Executing unit and integration tests"
            }
        }

        stage('Code Analysis') {
            steps {
                echo "Step 3: Performing code analysis"
            }
        }

        stage('Security Scan') {
            steps {
                echo "Step 4: Conducting a security scan"
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo "Step 5: Deploying the application to a staging server"
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                echo "Step 6: Running integration tests on the staging environment"
            }
        }

        stage('Deploy to Production') {
            steps {
                echo "Step 7: Deploying the application to a production server"
            }
        }
    }

    post {
        success {
            echo "Pipeline execution succeeded!"
            emailext(
                to: "varun.murali1997@gmail.com",
                subject: "Pipeline Status: Success",
                body: "The Jenkins pipeline has successfully completed its tasks.",
                attachLog: true
            )
        }
        failure {
            echo "Pipeline execution failed!"
            emailext(
                to: "varun.murali1997@gmail.com",
                subject: "Pipeline Status: Failure",
                body: "The Jenkins pipeline has encountered issues and failed. Please review the logs for details.",
                attachLog: true
            )
        }
    }
}
